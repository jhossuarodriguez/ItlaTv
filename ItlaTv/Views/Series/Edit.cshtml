@model ItlaTv.Models.Serie

<h2>Editar Serie</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    
    <div class="form-group">
        <label for="Imagen">Imagen</label>
        <input type="text" class="form-control" id="Imagen" name="Imagen" value="@Model.Imagen" />
    </div>

    <div class="form-group">
        <label for="ProductoraId">Productora</label>
        <select class="form-control" id="ProductoraId" name="ProductoraId">
             @if (ViewBag.Productoras != null && ViewBag.Productoras.Items.Any())
            {
                @foreach (var productora in ViewBag.Productoras.Items as List<ItlaTv.Models.Productora>)
                {
                    <option value="@productora.Id" selected="@(productora.Id == Model.ProductoraId ? "selected" : "")">@productora.Nombre</option>
                }
            }
            else
            {
                <option value="">No hay productoras disponibles</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="GeneroPrimarioId">Género Primario</label>
        <select class="form-control" id="GeneroPrimarioId" name="GeneroPrimarioId">
            @if (ViewBag.Generos != null && ViewBag.Generos.Count() > 0)
            {
                @foreach (var genero in ViewBag.Generos as List<ItlaTv.Models.Genero>)
                {
                    <option value="@genero.Id" selected="@(genero.Id == Model.GeneroPrimarioId ? "selected" : "")">@genero.Nombre</option>
                }
            }
            else
            {
                <option value="">No hay géneros disponibles</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="GeneroSecundarioId">Género Secundario</label>
        <select class="form-control" id="GeneroSecundarioId" name="GeneroSecundarioId">
            @if (ViewBag.Generos != null && ViewBag.Generos.Count() > 0)
            {
                @foreach (var genero in ViewBag.Generos as List<ItlaTv.Models.Genero>)
                {
                    <option value="@genero.Id" selected="@(genero.Id == Model.GeneroSecundarioId ? "selected" : "")">@genero.Nombre</option>
                }
            }
            else
            {
                <option value="">No hay géneros disponibles</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancelar</a>
